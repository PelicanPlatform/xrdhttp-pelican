{
    "name": "xrdhttp-pelican",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools-extension-pack"
            ],
            "settings": {
                "cmake.configureOnOpen": false
            }
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder}/build,target=/workspaces/xrdhttp-pelican/build,type=bind,consistency=cached"
    ],
    "postCreateCommand": "pre-commit install",
    "remoteUser": "vscode"
}
